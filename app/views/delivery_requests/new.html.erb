<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2 class="logo-img mx-auto"></h2>
        <p class="text-secondary">ユーザー登録</p>
      </div>
      
      <%= form_with(model:@request, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_field :departure, placeholder: "出発地", class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.text_field :destination, placeholder: "目的地", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.hidden_field :cost, :value => 1000 %>
        </div>

        <div class="form-group">
          <%= f.hidden_field :status, :value => 0 %>
        </div>

        <div class="actions">
          <%= f.submit "車を呼ぶ", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
      
      <br>
      <%=@user1%>

      <p><%=@user2.to_s%></p>

    </div>
  </div>
</div>